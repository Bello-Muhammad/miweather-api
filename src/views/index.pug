doctype html
html
    head
        - const metAttribute = {"charset": "UTF-8"}
        meta&attributes(metAttribute)
        - const secondAttribute = {"http-equiv": "X-UA-Compatible", "content":"IE=edge"}
        meta&attributes(secondAttribute)
        - const thirdAttribute = {"name": "viewport", "content": "width=device-width, initial-scale=1.0,maximum-scale=1"}
        meta&attributes(thirdAttribute)
        title pug index
        link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" type="text/css")
        link(rel="stylesheet", href="fonts/font-awesome.min.css" type="text/css")
        link(rel="stylesheet", href="style.css")
    body 

        div.site-content 
            div.site-header 
                div.container 
                    - const aClass = ["branding"]
                    a(href="index.html" class=aClass) 
                        -const imgAttribute = {"src": "images/logo.png", "alt": ""}
                        img.logo&attributes(imgAttribute)
                        div.logo-type 
                            h1.site-title Company name
                            small.site-description tagline goes here
                    
                    //Default snippet for navigation 
                    div.main-navigation 
                        button(type="button" class="menu-toggle") 
                            i(class ="fa fa-bars")
                        ul.menu 
                            li.menu-item.current-menu-item
                                a(href="index.html") Home  
                            li.menu-item
                                a(href="news.html") News 
                            li.menu-item
                                a(href="live-cameras.html") Live Cameras
                            li.menu-item
                                a(href="photos.html") Photos
                            li.menu-item
                                a(href="contact.html") Contact
                        //main-navigation

                    div.mobile-navigation 
            
            - const euAttribute = {"data-bg-image" : "images/banner.png"}
            div.hero&attributes(euAttribute) 
                div.container 
                    form(action="/weather" method='post' class="find-location")
                        input(type="text" name="city" placeholder="Check your location weather here...")
                        input(type="submit" value="find")
                        

            each city in locations
                div.forecast-table 
                    div.container 
                        div.forecast-container  
                            div.today.forecast
                                div.forecast-header
                                    div.day #{city.day} 
                                    div.date #{city.date}  
                                div.forecast-content 
                                    div.location #{city.place}
                                    div.degree
                                        div.num #{city.temp}
                                            sup o 
                                            | C
                                        div.forecast-icon
                                            
                                            img(src=`${city.icon}` width=70)

                                    span
                                        -const oneAtt = {"src":"images/icon-umberella.png", "alt":""}
                                        img&attributes(oneAtt) 
                                        | #{city.weather.clouds.all}%
                                    span
                                        -const twoAtt = {"src":"images/icon-wind.png", "alt":""}
                                        img&attributes(twoAtt)
                                        | #{city.speed}km/h
                                    span
                                        strong Desc.:- #{city.description}
                                    span(style="display: block") 
                                        strong   Sunrise: #{city.sunrise} am    || 
                                        strong Sunset: #{city.sunset} pm
                                                    

            main.main-content 
                div.fullwidth-block
                    div.container
                        div.row
                            div.col-md-4
                                h2.section-title Application features
                                ul.arrow-feature
                                    li 
                                        h3 In-memory storage (cache).
                                    li
                                        h3 Third-party api for retrieving forecast information.
                                    li 
                                        
                            
                            div.col-md-4 
                                h2.section-title Weather analysis 
                                ul.arrow-list
                                    li 
                                        h3 Weather data are retrived from 
                                            a(href='http://openweathermap.org' style='color: green') openweathermap
                                        
                            
                            div.col-md-4
                                h2.section-title Awesome Photos
                                div.photo-grid
                                    a(href="#") 
                                        -const thumb1Att = {"src":"images/thumb-1.jpg", "alt":""} 
                                        img&attributes(thumb1Att)
                                    a(href="#") 
                                        -const thumb2Att = {"src":"images/thumb-2.jpg", "alt":""}
                                        img&attributes(thumb2Att)
                                    a(href="#")
