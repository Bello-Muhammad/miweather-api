                                        img&attributes(thumb3Att)
                                    a(href="#")
                                        -const thumb4Att = {"src":"images/thumb-4.jpg", "alt":""}
                                        img&attributes(thumb4Att)
                                    a(href="#")
                                        -const thumb5Att = {"src":"images/thumb-5.jpg", "alt":""}
                                        img&attributes(thumb5Att)
                                    a(href="#")
                                        -const thumb6Att = {"src":"images/thumb-6.jpg", "alt":""}
                                        img&attributes(thumb6Att)
