            footer.site-footer 
                .container 
                    .row 
                        .col-md-8 
                            form(action="/weather" method='get' class="subscribe-form")
                                input(type="text" placeholder="Enter your email to subscribe....")
                                input(type="submit" value="subscribe") 
                        .col-md-3.col-md-offset-1 
                            .social-links 
                                a(href="#"): i.fa.fa-facebook 
                                a(href="#"): i.fa.fa-twitter
                                a(href="#"): i.fa.fa-google-plus 
                                a(href="#"): i.fa.fa-pinterest  
